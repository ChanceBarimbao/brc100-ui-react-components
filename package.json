{
  "name": "@bsv/brc100-ui-react-components",
  "version": "0.1.16",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "A library of reusable React components for building wallet UIs.",
  "repository": {
    "type": "git",
    "url": "https://github.com/bsv-blockchain/brc100-ui-react-components.git"
  },
  "author": "BSV Blockchain Association",
  "license": "Open BSV License",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "dependencies": {
    "@bsv/uhrp-react": "^1.0.1",
    "libphonenumber-js": "^1.12.6",
    "metanet-apps": "^1.0.4"
  },
  "peerDependencies": {
    "@bsv/sdk": "^1.6.18",
    "@bsv/wallet-toolbox-client": "../wallet-toolbox/client/",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.3",
    "@mui/material": "^6.4.3",
    "@mui/styles": "^6.4.3",
    "@tauri-apps/plugin-opener": "^2.4.0",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "iso-3166-ts": "^2.2.0",
    "jdenticon": "^3.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^11.0.3"
  },
   "scripts": {
    "build": "tsc",
    "clean": "npm run clean:build && npm run clean:deps",
    "clean:build": "rm -rf dist",
    "clean:deps": "rm -rf node_modules package-lock.json yarn.lock",
    "clean:all": "npm run clean && rm -rf .cache tmp temp coverage *.log .DS_Store && npm cache clean --force",
    "rebuild": "npm run clean && npm install && npm run build",
    "rebuild:toolbox": "npm run clean:deps && npm install && npm run build",
    "link:toolbox": "cd ../wallet-toolbox && npm run build && cd - && npm run rebuild:toolbox",
    "verify:toolbox": "node -e \"console.log('Toolbox path:', require.resolve('@bsv/wallet-toolbox-client'))\"",
    "lint:ci": "echo 'No linting'",
    "test": "echo 'No tests'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "standard": "^17.0.0",
    "typescript": "^5.3.3"
  }
}
